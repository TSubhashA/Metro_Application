<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activity.JourneyPreviewActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/onelayout"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <include layout="@layout/header"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:id="@+id/preive_preview"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:text="Ticket Type"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/ticket_type_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Number of Tickets"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/number_of_ticket_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:id="@+id/adultLayout"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Adult"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/adult_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:id="@+id/childLayout"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Children"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/children_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:id="@+id/srLayout"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Senior Citizen"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/senior_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Discount"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/dis_amount_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Total Amount"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/total_amount_journey_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_btn"
            android:layout_marginTop="@dimen/margin_btn_top"
            android:layout_marginEnd="@dimen/margin_btn"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back"
                android:layout_marginEnd="@dimen/button_space_size"
                android:background="@drawable/back_button"
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor"
                android:textAllCaps="false"
                android:id="@+id/back_journey_preview"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pay Now"
                android:textColor="@color/buttonColor"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="@dimen/button_space_size"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:id="@+id/pay_now_journey_preview"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">
            <include layout="@layout/footer"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>