<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activity.PassActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/onelayout"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your pass :"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/from_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1.3"
                android:background="@drawable/spinner_border"
                android:entries="@array/pass">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration :"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
           >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"
                    android:layout_marginStart="40sp"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/pass_weekly"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:layout_marginStart="40sp"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/pass_monthly"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quarterly"
                    android:layout_marginStart="40sp"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/pass_quarterly"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="3">
                <TableRow
                    android:padding="10sp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adult"
                        android:layout_column="0"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/decrease_adult_home"
                            android:layout_width="@dimen/pm_box_size"
                            android:layout_height="@dimen/pm_box_size"
                            android:background="@drawable/button_border"
                            android:text="-"
                            android:textStyle="bold"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/adult_number_home"
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/increase_adult_home"
                            android:layout_width="@dimen/pm_box_size"
                            android:layout_height="@dimen/pm_box_size"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:background="@drawable/button_border"
                            android:text="+" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_column="2"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/adult_amount_home"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Inr"
                            android:textColor="#000"
                            android:textSize="20sp" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:padding="10sp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Children"
                        android:textColor="#000"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/decrease_child_home"
                            android:layout_width="@dimen/pm_box_size"
                            android:layout_height="@dimen/pm_box_size"
                            android:background="@drawable/button_border"
                            android:text="-"
                            android:textStyle="bold"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/number_child_home"
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/increase_child_home"
                            android:layout_width="@dimen/pm_box_size"
                            android:layout_height="@dimen/pm_box_size"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:background="@drawable/button_border"
                            android:text="+" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/child_amount_home"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Inr"
                            android:textColor="#000"
                            android:textSize="20sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:padding="10sp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senior Citizen"
                        android:textColor="#000"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/decrease_sr_home"
                            android:layout_width="@dimen/pm_box_size"
                            android:layout_height="@dimen/pm_box_size"
                            android:background="@drawable/button_border"
                            android:text="-"
                            android:textStyle="bold"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/number_sr_home"
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/increase_sr_home"
                            android:layout_width="@dimen/pm_box_size"
                            android:layout_height="@dimen/pm_box_size"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:background="@drawable/button_border"
                            android:text="+" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sr_amount_home"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Inr"
                            android:textColor="#000"
                            android:textSize="20sp" />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:padding="10sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Total Amount :"
                        android:gravity="right"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_column="2"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_amount_home"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Inr"
                            android:textColor="#000"
                            android:textSize="20sp" />
                    </LinearLayout>


                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Amount to pay"
                android:textColor="#000"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:textColor="#000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/actual_amount_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textColor="#000"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold" >

            </TextView>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:id="@+id/back_btn_pass"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:textAllCaps="false"
            android:background="@drawable/button_border"
            android:id="@+id/pay_now_btn_pass"/>
    </LinearLayout>



</RelativeLayout>